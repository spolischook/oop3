{% extends 'base.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>{{ film.title }} <small>{{ film.getShortDescription(45) }}</small></h1>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-3">
            <img src="{{ film.poster.getThumbnail(260, 390) }}" alt="{{ film.poster.title }}">
        </div>
        <div class="col-sm-6 col-md-9">
                {{ film.getEmbedVideo(690, 370) }}
        </div>
    </div>
    <div class="row">
        <div class="clearfix col-sm-6 col-md-3">
            {% for genre in film.genres %}
                <span class="label label-info">{{ genre.title }}</span>
            {% endfor %}
            <div class="clearfix"><p></p></div>
            <div class="clearfix"><p>Film's info</p></div>
            <table class="table">
                <tr>
                    <td>Year</td>
                    <td>{{ film.year }}</td>
                </tr>
                <tr>
                    <td>Country</td>
                    <td>{{ film.country.name }}</td>
                </tr>
            </table>
        </div>
        <div class="col-sm-6 col-md-9">
            <h2>Film description</h2>
            {{ film.description }}
        </div>
    </div>
{% endblock content %}